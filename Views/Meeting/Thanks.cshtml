@model UserInfo;

@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>
    @if (Model.WillAttend == true)
    {
        <p>Teşekkürler,@Model.Name Toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
        <a class="btn btn-small btn-outline-primary" asp-controller="Meeting" asp-action="List">Katılımcıları Listele</a>
    }else
    {
        <p>@Model.Name,katılmadığından dolayı üzgünüz.</p>
        <a class="btn btn-small btn-outline-primary" href="/Meeeting/Apply">Başvuru Formu</a>

    }


</main>